@model IEnumerable<MVCGroupE.Models.FurtureClasses>
@using Microsoft.AspNet.Identity;

@{
    ViewBag.Title = "Index";
    var userId = User.Identity.GetUserId();
}

<p></p>
<p>
    @Html.ActionLink("Add Courses to Plan", "Create")
</p>

<h2>Bict Year One Courses</h2>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Course.CourseName)
        </th>
        
        <th>
            @Html.DisplayNameFor(model => model.Year)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Semester)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    if (item.Course.Year == 1)
    {
        if (item.Students.ApplicationUserId == userId)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Course.CourseName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Year)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Semester)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.FurtureCourseID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.FurtureCourseID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.FurtureCourseID })
                </td>
            </tr>
        }

    }

}
    </table>

