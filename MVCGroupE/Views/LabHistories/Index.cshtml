@model IEnumerable<MVCGroupE.Models.LabHistory>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
@using (Html.BeginForm())
{
    <p>
        Find by Class: @Html.TextBox("HistClassSearch")
        <input type="submit" value="Search" />
        <span class="search-button">
            Find by Student Name: @Html.TextBox("SearchString")
            <input type="submit" value="Search" />
        </span>
    </p>
}
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr class="info">
        <th>
            @Html.DisplayNameFor(model => model.Course.CourseName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Students.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LabDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Attended)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Course.CourseName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Students.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LabDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Attended)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.LabId }) |
            @*@Html.ActionLink("Details", "Details", new { id=item.LabId }) |*@
            @Html.ActionLink("Delete", "Delete", new { id=item.LabId })
        </td>
    </tr>
}

</table>
