@model IEnumerable<MVCGroupE.Models.Enrolment>
@using Microsoft.AspNet.Identity;

@{


    ViewBag.Title = "Index";
    var userId = User.Identity.GetUserName();
   
}

<h2>Index</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Course.CourseName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Students.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EnrolmentYear)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EnrolmentSemester)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Grade)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    if (item.Students.Email == userId )
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Course.CourseName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Students.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EnrolmentYear)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EnrolmentSemester)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Grade)
            </td>
            <td>
                @Html.ActionLink("Delete", "Delete", new { id = item.EnrollId })
            </td>
        </tr>
    }

}

</table>
