@{


    ViewBag.Title = "Index";
    var userId = User.Identity.GetUserName();
   
}

<h2>Index</h2>
    @Html.ActionLink("Create New", "Create")

@using (Html.BeginForm())
{
    <p>
        Find by Category Name: @Html.TextBox("AdminSearch")
        <input type="submit" value="Search" />
